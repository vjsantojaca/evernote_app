<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.vsantoja.app.evernote"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.USE_CREDENTIALS"/>
	<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:name=".Application"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name="com.evernote.client.android.EvernoteOAuthActivity"/>
		<activity android:name="com.evernote.client.android.login.EvernoteLoginActivity"/>
		<activity
			android:name=".desing.activity.LoginActivity"
			android:label="@string/app_name"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".desing.activity.ListActivity"
			android:label="@string/app_name"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".desing.activity.NewNoteActivity"
			android:label="@string/title_activity_new_note"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
	</application>

</manifest>
